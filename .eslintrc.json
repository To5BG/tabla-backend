{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "es2021": true,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "@typescript-eslint/naming-convention": ["error", { "selector": "typeAlias", "format": ["StrictPascalCase"] }]
  }
}
